# Extension Configuration
# Get your extension ID from chrome://extensions (enable Developer mode)
NEXT_PUBLIC_EXTENSION_ID=your-extension-id-here

# Supabase Configuration (Required for phone OTP authentication)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Backend URL
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000

# Show email authentication (set to 'true' for dev/testing only, 'false' or omit for production)
# Default: false (phone-only authentication)
NEXT_PUBLIC_SHOW_EMAIL_AUTH=false
